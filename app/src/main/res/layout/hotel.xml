<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Hotel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 Star Hotels"
                android:textColor="#000000"
                android:background="@drawable/gradient"
                android:layout_marginTop="10dp"
                android:textSize="25dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:orientation="horizontal">



                    <ImageView

                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/hotel1"
                        android:layout_marginRight="20dp"/>

                    <ImageView

                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/hotel2"
                        android:layout_marginRight="20dp" />
                    <ImageView

                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/hotel3"
                        android:layout_marginRight="20dp" />
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient"
                android:text="3 Star Hotels"
                android:textColor="#000000"
                android:textSize="25dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/courtyard1"
                        android:layout_marginRight="20dp"/>
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/courtyard2"
                        android:layout_marginRight="20dp" />
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/courtyard3"
                        android:layout_marginRight="20dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Courtyard By Mariott"
                android:textColor="#000000"
                android:background="@drawable/gradient"

                android:textSize="25dp" />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budget Hotels"
                android:textColor="#000000"
                android:background="@drawable/gradient"
                android:layout_marginTop="30dp"
                android:textSize="25dp" />


            <HorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:orientation="horizontal">



                    <ImageView

                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/oyo1"
                        android:layout_marginRight="20dp"/>
                    <ImageView

                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/oyo2"
                        android:layout_marginRight="20dp" />
                    <ImageView

                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/oyo3"
                        android:layout_marginRight="20dp" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>